# Database Configuration
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Or: mongodb+srv://username:password@cluster.mongodb.net/database
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/my-website?retryWrites=true&w=majority"

# Alternative local MongoDB URL
# DATABASE_URL="mongodb://localhost:27017/my-website"

# Clerk Authentication
# Get these from https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk URLs - customize these for your domain
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# GitHub API Configuration
# Used for "last updated" badge on landing page
# Create a personal access token at https://github.com/settings/tokens
GITHUB_TOKEN="ghp_..."
GITHUB_OWNER="your-github-username"
GITHUB_REPO="your-repo-name"

# Image Upload Configuration
# Vercel Blob Storage - get token from Vercel dashboard
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# Alternative: AWS S3 Configuration
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# Alternative: Cloudinary Configuration
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://juliangilliatt.com"
NEXT_PUBLIC_SITE_NAME="Julian Gilliatt"

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID="G-..."

# Email Configuration (optional)
# For contact form and newsletter
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@juliangilliatt.com"

# Mailgun Configuration (alternative)
# MAILGUN_DOMAIN="your-domain.com"
# MAILGUN_API_KEY="key-..."

# SendGrid Configuration (alternative)
# SENDGRID_API_KEY="SG...."

# Webhooks
# Secret for webhook validation
WEBHOOK_SECRET="your-webhook-secret"

# Security
# Generate a random secret for NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="https://juliangilliatt.com"

# Environment
NODE_ENV="development"

# Rate Limiting (optional)
# Redis URL for rate limiting
REDIS_URL="redis://localhost:6379"

# Monitoring (optional)
# Sentry for error tracking
SENTRY_DSN="https://..."

# Analytics (optional)
# PostHog for product analytics
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Search (optional)
# Algolia for enhanced search
ALGOLIA_APP_ID="your-app-id"
ALGOLIA_API_KEY="your-api-key"
ALGOLIA_SEARCH_KEY="your-search-key"

# Feature Flags (optional)
# For A/B testing and gradual rollouts
NEXT_PUBLIC_FEATURE_FLAGS_KEY="your-feature-flags-key"

# Social Media (optional)
# For social sharing and embeds
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"
YOUTUBE_API_KEY="your-youtube-api-key"

# Development Tools
# Uncomment for development/debugging
# DEBUG="prisma:query,prisma:info,prisma:warn,prisma:error"
# PRISMA_DEBUG="true"