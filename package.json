{
  "name": "my-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:check": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "bash scripts/smoke-tests.sh",
    "test:accessibility": "jest --testPathPattern=tests/accessibility",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:all": "npm run lint:check && npm run type-check && npm run test:unit && npm run test:integration && npm run test:e2e",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx lib/db-seed.ts",
    "db:setup": "node scripts/setup-db.js",
    "db:studio": "prisma studio",
    "deploy": "bash scripts/deploy.sh",
    "deploy:preview": "bash scripts/preview-deploy.sh",
    "deploy:monitor": "bash scripts/monitor-deployment.sh"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@clerk/nextjs": "^5.0.0",
    "@prisma/client": "^5.10.0",
    "prisma": "^5.10.0",
    "zod": "^3.22.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "@next/mdx": "^14.2.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "remark": "^15.0.0",
    "rehype": "^13.0.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "gray-matter": "^4.0.3",
    "reading-time": "^1.5.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "@tailwindcss/typography": "^0.5.10",
    "tsx": "^4.7.0",
    "mongodb": "^6.3.0",
    "class-variance-authority": "^0.7.0",
    "@radix-ui/react-slot": "^1.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.0",
    "@axe-core/playwright": "^4.8.0",
    "lighthouse": "^11.4.0",
    "puppeteer": "^21.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}